<!DOCTYPE html>
<html lang="en">
  <%- include("partials/head") %>
  <body>
    <h1><%= title %></h1>
    <form action="/models/add" method="POST">
      <label for="model-name">Model Name:</label>
      <input type="text" name="modelName" id="model-name" required />
      <label for="brand">Brand:</label>
      <select name="brand" id="brand" required>
        <option value="">-- Select a Brand --</option>
        <% brands.map(brand => { %>
        <option value="<%= brand.brand_id %>"><%= brand.brand_name %></option>
        <% }) %>
      </select>
      <label for="category">Category:</label>
      <select name="category" id="category" required>
        <option value="">-- Select a Category --</option>
        <% categories.map(category => { %>
        <option value="<%= category.category_id %>">
          <%= category.category_name %>
        </option>
        <% }) %>
      </select>
      <label for="year-introduced">Year Introduced:</label>
      <input
        type="number"
        min="1900"
        max="2108"
        name="yearIntroduced"
        required
      />
      <label for="specifications">Specs: </label>
      <textarea name="specifications" id="specifications" required></textarea>
      <label for="admin-password">Admin Password: </label>
      <input type="password" name="adminPassword" required />
      <%- include("partials/formErrors") %>
      <button type="submit">Add</button>
    </form>
    <a href="/"><button>Go Back</button></a>
  </body>
</html>
