<!DOCTYPE html>
<html lang="en">
  <%- include("partials/head") %>
  <body>
    <h1 class="page-title"><%= title %></h1>
    <form
      action="/instruments/<%= instrument.instrument_id %>/edit?_method=PUT"
      method="POST"
      class="form-container"
    >
      <div class="form-group">
        <label class="form-label">Status:</label>
        <div class="radio-group">
          <div class="form-check">
            <input
              type="radio"
              name="status"
              id="in-stock"
              value="In Stock"
              checked
              class="form-check-input"
            />
            <label for="in-stock">In Stock</label>
          </div>
          <div class="form-check">
            <input
              type="radio"
              name="status"
              id="sold-out"
              value="Sold Out"
              class="form-check-input"
            />
            <label for="sold-out">Sold Out</label>
          </div>
        </div>
      </div>

      <div class="form-group">
        <label for="price" class="form-label">Price: </label>
        <input
          type="number"
          name="price"
          id="price"
          step=".01"
          required
          class="form-control"
        />
      </div>

      <div class="form-group">
        <label for="specifications" class="form-label">Specs: </label>
        <textarea
          name="newSpecifications"
          id="specifications"
          class="form-control"
          required
        >
  <%= instrument.specifications %></textarea
        >
      </div>

      <div class="form-group">
        <label for="admin-password" class="form-label">Admin Password: </label>
        <input
          type="password"
          name="adminPassword"
          required
          class="form-control"
        />
      </div>

      <div class="error-list"><%- include("partials/formErrors") %></div>

      <button type="submit" class="btn">Update</button>
      <a href="/instruments/<%= instrument.instrument_id %>">
        <button type="button" class="btn btn-secondary">Go Back</button>
      </a>
    </form>
  </body>
</html>
